@model IEnumerable<MyNewApp.Models.Models.CoverType>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Create Cover Type
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th width="20%">
                    Id
                </th>
                <th width="60%">
                    Cover Type Name
                </th>
                <th width="20%">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td width="60%">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td width="20%">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> &nbsp Edit
                        </a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> &nbsp Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>