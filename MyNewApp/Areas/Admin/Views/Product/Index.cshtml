@model IEnumerable<MyNewApp.Models.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Create New Product
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th width="10%">
                    Id
                </th>
                <th width="20%">
                    Title
                </th>
                <th width="10%">
                    ISBN
                </th>
                <th width="10%">
                    Author
                </th>
                <th width="10%">
                    Price
                </th>
                <th width="10%">
                    Category
                </th>
                <th width="20%">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="5%">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td width="10%">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> &nbsp Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> &nbsp Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>